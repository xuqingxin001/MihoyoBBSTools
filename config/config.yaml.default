#这里控制整个config文件是否启用
enable: true
#config的版本
version: 15
# todo功能
push: ""
account:
  #登入账号只需要修改cookie就行了
  cookie: ""
  stuid: ""
  stoken: ""
  mid: ""
device:
  name: "Xiaomi MI 6"
  model: "Mi 6"
  # 此处留空则脚本随机生成
  id: ""
  # 手动获取
  fp: ""
mihoyobbs:
  #控制bbs功能是否启用
  enable: false
  #社区签到
  checkin: true
  #签到的社区列表 详情可以看config文件夹下面的readme
  checkin_list:
    - 2
    - 6
  #看帖
  read: true
  #点赞帖子
  like: true
  #取消点赞
  cancel_like: true
  #分享帖子
  share: true
# 游戏签到
games:
  #国服控制区域
  cn:
    #控制是否启用国内签到
    enable: true
    #配置签到用的ua 脚本会在后面自动加上miHoYoBBS/版本号 ,请复制的时候不要带miHoYoBBS/版本
    useragent: "Mozilla/5.0 (Linux; Android 12; Unspecified Device) AppleWebKit/537.36 (KHTML, like Gecko) Version/4.0 Chrome/103.0.5060.129 Mobile Safari/537.36"
    #重试次数
    retries: 3
    #原神
    genshin:
      #控制是否启用签到，下面一致
      checkin: false
      #这里是不签到的账号，填入文本型数据 示例["114514","1919810"](也许你这边是和checkin_list那块一样)，下面一致
      black_list: []
    #崩坏2
    honkai2:
      checkin: false
      black_list: []
    #崩坏3
    honkai3rd:
      checkin: false
      black_list: []
    #未定事件簿
    tears_of_themis:
      checkin: false
      black_list: []
    # 崩坏: 星穹铁道
    honkai_sr:
      checkin: true
      black_list: []
    #绝区零
    zzz:
      checkin: true
      black_list: []
  #国际服控制区域
  os:
    enable: false
    # 国际服专用Cookie填写
    cookie: ""
    # 国际服语言
    lang: "zh-cn"
    genshin:
      checkin: false
      black_list: []
    honkai3rd:
      checkin: false
      black_list: [ ]
    tears_of_themis:
      checkin: false
      black_list: []
    honkai_sr:
      checkin: false
      black_list: []
    zzz:
      checkin: false
      black_list: []
#云游戏专区
cloud_games:
  # 控制整个云游戏的签到
  cn:
    enable: false
    #云原神
    genshin:
      #开启签到
      enable: true
      #这里填入抓包获得的token，支持多个
      token: "ai=4;ci=1;oi=20344972;ct=v2_7ff0dcc3cf2d314ebcc2cb7791836548c77bc288;si=26edcb6dd06b58d10c0caed7ff1e95bc93523fe405b7f05fbafed4dc6724023b;bi=hk4e_cn"
    #云绝区零
    zzz:
      enable: false
      token: ""
  os:
    lang: "zh-cn"
    enable: false
    genshin:
      enable: false
      token: ""
competition:
  enable: false
  # 功能已经移除
  genius_invokation:
    enable: false
    account: []
    checkin: false
    weekly: false
